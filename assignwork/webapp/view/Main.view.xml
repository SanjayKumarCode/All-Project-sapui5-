		>
			<layout:HorizontalLayout >
<VBox>
<Text text="" />
					
</VBox>

<VBox>
<Text text="Order:"   class="sapUiSmallMarginBeginEnd" />
					<MultiInput
                      class="sapUiSmallMarginBeginEnd" 
									
										showSuggestion="true"
										suggestionItems="{/}"
